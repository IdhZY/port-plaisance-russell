<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Port Russell</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard"> Port Russell - Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/dashboard">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catways">Catways</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/reservations">Réservations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users">Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api-docs" target="_blank">API Docs</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-light btn-sm ms-2" onclick="logout()">Déconnexion</button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Utilisateur connecté</h4>
                        <p class="mb-1"><strong>Nom :</strong> <span id="userName">Chargement...</span></p>
                        <p class="mb-0"><strong>Email :</strong> <span id="userEmail">Chargement...</span></p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h4 class="card-title">Date du jour</h4>
                        <p class="mb-0 fs-5" id="currentDate">Chargement...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques rapides -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-info">
                    <div class="card-body text-center">
                        <h5 class="card-title">Catways</h5>
                        <p class="display-4" id="totalCatways">-</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h5 class="card-title">Réservations en cours</h5>
                        <p class="display-4" id="activeReservations">-</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h5 class="card-title">Utilisateurs</h5>
                        <p class="display-4" id="totalUsers">-</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des réservations en cours -->
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Réservations en cours</h5>
            </div>
            <div class="card-body">
                <div id="loadingReservations" class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                </div>
                <div id="reservationsTable" style="display: none;">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>N° Catway</th>
                                    <th>Client</th>
                                    <th>Bateau</th>
                                    <th>Début</th>
                                    <th>Fin</th>
                                </tr>
                            </thead>
                            <tbody id="reservationsBody">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div id="noReservations" style="display: none;" class="alert alert-info">
                    Aucune réservation en cours
                </div>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="/javascript.js"></script>
    <script>
        
        document.addEventListener('DOMContentLoaded', async () => {
            checkAuth();
            displayUserInfo();
            displayCurrentDate();
            await loadStatistics();
            await loadActiveReservations();
        });

        function displayUserInfo() {
            const user = JSON.parse(localStorage.getItem('user'));
            if (user) {
                document.getElementById('userName').textContent = user.username || 'N/A';
                document.getElementById('userEmail').textContent = user.email || 'N/A';
            }
        }

        function displayCurrentDate() {
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
            };
            const today = new Date().toLocaleDateString('fr-FR', options);
            document.getElementById('currentDate').textContent = today;
        }

        async function loadStatistics() {
            const token = localStorage.getItem('token');
            
            try {
                const catwaysRes = await fetch('/api/catways', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const catwaysData = await catwaysRes.json();
                document.getElementById('totalCatways').textContent = catwaysData.data?.length || 0;

                const reservationsRes = await fetch('/api/catways/reservations/all', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const reservationsData = await reservationsRes.json();

                const now = new Date();
                const active = reservationsData.data?.filter(r => {
                    const start = new Date(r.startDate);
                    const end = new Date(r.endDate);
                    return start <= now && end >= now;
                }).length || 0;
                
                document.getElementById('activeReservations').textContent = active;

                const usersRes = await fetch('/api/users', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const usersData = await usersRes.json();
                document.getElementById('totalUsers').textContent = usersData.data?.length || 0;

            } catch (error) {
                console.error('Erreur chargement statistiques:', error);
            }
        }

        async function loadActiveReservations() {
            const token = localStorage.getItem('token');
            const loadingDiv = document.getElementById('loadingReservations');
            const tableDiv = document.getElementById('reservationsTable');
            const noReservationsDiv = document.getElementById('noReservations');
            const tbody = document.getElementById('reservationsBody');
            
            try {
                const response = await fetch('/api/catways/reservations/all', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                
                const result = await response.json();
                
                loadingDiv.style.display = 'none';
                
                if (!result.success || !result.data || result.data.length === 0) {
                    noReservationsDiv.style.display = 'block';
                    return;
                }

                const now = new Date();
                const activeReservations = result.data.filter(r => {
                    const start = new Date(r.startDate);
                    const end = new Date(r.endDate);
                    return start <= now && end >= now;
                });

                if (activeReservations.length === 0) {
                    noReservationsDiv.style.display = 'block';
                    return;
                }

                tbody.innerHTML = activeReservations.map(r => `
                    <tr>
                        <td><strong>${r.catwayNumber}</strong></td>
                        <td>${r.clientName}</td>
                        <td>${r.boatName}</td>
                        <td>${new Date(r.startDate).toLocaleDateString('fr-FR')}</td>
                        <td>${new Date(r.endDate).toLocaleDateString('fr-FR')}</td>
                    </tr>
                `).join('');

                tableDiv.style.display = 'block';

            } catch (error) {
                console.error('Erreur chargement réservations:', error);
                loadingDiv.style.display = 'none';
                noReservationsDiv.style.display = 'block';
            }
        }
    </script>
</body>
</html>